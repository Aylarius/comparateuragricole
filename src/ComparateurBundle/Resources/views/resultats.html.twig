{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid main">
        <div class="row">
            <div class="col-xs-12">
                <div class="row center">
                    <div class="col-xs-8" id="form">
                        <div id="form-new">
                            <h1>Résultats</h1>
                            <div class="col-xs-12" id="resultats">
                                <div class="row resultat">
                                    {% set prixFinal = 0 %}
                                    {% for resultat in resultats %}
                                        {% set prixFinal = fraisdeport + resultat.prix %}
                                        <div class="col-xs-4" id="result-entreprise">
                                            <span class="entreprise">Entreprise :</span>
                                            <span class="nom-entreprise">{{ resultat.entreprise }}</span>
                                        </div>
                                        <div class="col-xs-4" id="result-quality">
                                            <span class="proteines-class">Protéines :</span>
                                            <span class="value-proteines">{{ resultat.proteines }}</span>
                                            <br>
                                            <span class="ps-class">PS :</span>
                                            <span class="value-ps">{{ resultat.ps }} kg/hL</span>
                                            <br>
                                            <span class="humidite-class">Humidité :</span>
                                            <span class="value-humidite">{{ resultat.humidite }} %</span>
                                            <br>
                                            <span class="hagberg-class">Hagberg :</span>
                                            <span class="value-hagberg">{{ resultat.hagberg }} sec</span>
                                        </div>
                                        <div class="col-xs-2" id="block-prix">
                                            <span>Prix : {{ prixFinal }} €</span>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
