{% extends 'base.html.twig' %}

{% block body %}

<div class="container-fluid main">
    <div class="row">
        <div class="col-xs-12">
                <div class="row center">
                    <div class="col-xs-8" id="form">
                        <div id="form-new">
                            <h1>Faire une offre d'achat</h1>


                            {{ form_start(form) }}
                            {{ form_errors(form) }}

                            <div class="form-contour">
                                {{ form_label(form.entreprise) }}
                                <hr>
                                {{ form_errors(form.entreprise) }}
                                {{ form_widget(form.entreprise) }}
                            </div>

                            <div class="form-contour">
                                {{ form_label(form.produit) }}
                                <hr>
                                {{ form_errors(form.produit) }}
                                {{ form_widget(form.produit) }}
                            </div>

                            <div class="form-contour">
                                {{ form_label(form.destination) }}
                                <hr>
                                {{ form_errors(form.destination) }}
                                {{ form_widget(form.destination) }}
                            </div>

                            <div class="form-contour">
                                {{ form_label(form.prix) }}
                                <hr>
                                {{ form_errors(form.prix) }}
                                {{ form_widget(form.prix) }}
                                <span class="unite">€</span>
                            </div>

                            <div id="qualites">
                            <h3>Qualités</h3>
                                <hr>
                                <div class="col-xs-6 col-form">
                                    <div>
                                        {{ form_errors(form.proteines) }}
                                        {{ form_widget(form.proteines) }}
                                        <span class="unite">%</span>
                                    </div>

                                    <div class="input-2">
                                        {{ form_errors(form.humidite) }}
                                        {{ form_widget(form.humidite) }}
                                        <span class="unite">%</span>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-form col-form-right">
                                    <div>
                                        {{ form_errors(form.ps) }}
                                        {{ form_widget(form.ps) }}
                                        <span class="unite">kg/hL</span>
                                    </div>

                                    <div class="input-2">
                                        {{ form_errors(form.hagberg) }}
                                        {{ form_widget(form.hagberg) }}
                                        <span class="unite">sec</span>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <br>
                            <input type="submit" value="Valider" class="btn btn-default pull-right" id="valid-button"/>

                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
{% endblock %}
